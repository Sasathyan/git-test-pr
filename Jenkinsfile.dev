pipeline{
     agent{
        docker {
               image 'ubuntu:22.04'
               args '--privileged'
        }
     }

     stages{
	stage ('checkout'){
          steps{
           cleanWs()
           checkout scm
          }
        }
       stage ('buid'){
         steps{
	  	echo 'Archive the files in directory'
		echo "${env.pr_label}"
		sh 'tar --force-local -cvf \\"test_${pr_label}.tar\\" ex1 ex2 ex3'
	 }
       }
     }
}
