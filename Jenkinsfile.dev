pipeline{
     agent{
        docker {
               image 'ubuntu:22.04'
               args '--privileged'
        }
     }

     stages{
	stage ('checkout'){
          steps{
           cleanWs()
           checkout scm
          }
        }
       stage ('buid'){
         steps{
	   script{
	  	echo 'Archive the files in directory'
		sh 'chmod +x tar_file.sh'
          	sh ./tar_file
	   }
	 }
       }
     }
}
